    echo "\n âŒğŸŸ© Next build ${RED}Failed${NC}. ğŸŸ©âŒ\n View the errors above to see why.\n"
    false;
)

# If everything passes... Now we can commit
echo "âœ…âœ… ${GREEN}Build is completed... I am committing this now.${NC} âœ…âœ…\n"