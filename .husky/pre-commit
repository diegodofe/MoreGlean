# bash echo color
RED='\033[1;31m'
GREEN='\033[1;32m'
BLUE='\033[1;36m'
BOLD='\033[1;37m'
NC='\033[0m'

npx -p prettier@latest -p pretty-quick pretty-quick

echo "\n ğŸš§ğŸ—ï¸  ${BOLD}Checking format, lint and types in your project before committing${NC}"

